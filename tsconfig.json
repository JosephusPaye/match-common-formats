{
  "include": ["src/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "module": "commonjs",
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es2018"
  }
}
